{
  "name": "make-jp",
  "version": "1.0.0",
  "description": "for Maker Faire Tokyo",
  "main": "common.js",
  "repository": "https://github.com/sforzando/make-jp.git",
  "bugs": {
    "url": "https://github.com/sforzando/make-jp/issues"
  },
  "author": "sforzando LLC.",
  "license": "WTFPL",
  "private": true,
  "dependencies": {
    "jquery-validation": "^1.17.0",
    "materialize-css": "^0.100.2",
    "toastr": "^2.1.4"
  },
  "devDependencies": {
    "eslint": "^4.18.2",
    "mocha": "^5.0.4",
    "node-sass": "^4.7.2",
    "parcel-bundler": "^1.6.2",
    "prettier": "^1.11.1",
    "prettier-eslint": "^8.8.1",
    "prettier-eslint-cli": "^4.7.1",
    "puppeteer": "^1.2.0"
  },
  "scripts": {
    "start": "dev_appserver.py app.yaml",
    "clean": "rm -rf .cache",
    "build": "yarn run build:debug",
    "build:debug":
      "yarn run build:debug:common && yarn run build:debug:registration && yarn run build:debug:survey",
    "build:debug:common":
      "parcel build src/common.js --no-cache --no-minify --target browser --detailed-report --out-dir static",
    "build:debug:registration":
      "parcel build src/registration.js --no-cache --no-minify --target browser --detailed-report --out-dir static",
    "build:debug:survey":
      "parcel build src/survey.js --no-cache --no-minify --target browser --detailed-report --out-dir static",
    "build:production":
      "yarn run clean && yarn run build:production:common && yarn run build:production:registration && yarn run build:production:survey",
    "build:production:common":
      "parcel build src/common.js --no-cache --target browser --detailed-report --out-dir static",
    "build:production:registration":
      "parcel build src/registration.js --no-cache --target browser --detailed-report --out-dir static",
    "build:production:survey":
      "parcel build src/survey.js --no-cache --target browser --detailed-report --out-dir static",
    "pretest": "yarn start &",
    "test": "yarn test:puppeteer:debug",
    "test:puppeteer:debug": "yarn test:puppeteer:debug:screenshot",
    "test:puppeteer:debug:screenshot":
      "env mode=local mocha test/screenshot.js",
    "test:puppeteer:production": "yarn test:puppeteer:production:screenshot",
    "test:puppeteer:production:screenshot":
      "env mode=production mocha test/screenshot.js",
    "cover": "openssl enc -e -aes256 -in app.yaml -out app.yaml.secret",
    "uncover": "openssl enc -d -aes256 -in app.yaml.secret -out app.yaml"
  }
}
